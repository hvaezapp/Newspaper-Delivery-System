@model Payment

@using NDS.Utility


@{
    Layout = null;
}


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">Payment Details </h4>
</div>


<div class="modal-body form-horizontal" style="padding:24px;">

    <div class="form-group">

        <label asp-for="Description" class="control-label"></label>

        <p>
            @Model.Description
        </p>

    </div>

    <hr />


    <div class="form-group">

        <label asp-for="FkCustomerId" class="control-label"></label>

        <p>
            @Model.Tbl_Customer.FirstName @Model.Tbl_Customer.LastName
        </p>

    </div>

    <hr />


    <div class="form-group">

        <label asp-for="FkOrderId" class="control-label"></label>

        <p>
            @Model.Tbl_Order.Code
        </p>

    </div>

    <hr />


    <div class="form-group">

        <label asp-for="Price" class="control-label"></label>

        <p>
            @Model.Price.ToPrice()
        </p>

    </div>

    <hr />





    <div class="form-group">

        <label asp-for="CreateDate" class="control-label"></label>

        <p>
            @Model.CreateDate
        </p>

    </div>



</div>


<div class="modal-footer" style="text-align:left;">

    <button class="btn btn-default" type="button" data-dismiss="modal">Close</button>


</div>





