@model NDS.Models.ViewModels.CreatePaymentViewModel

@using NDS.Utility


@if (ViewBag.message != null)
{
    <div class="alert alert-@ViewBag.type">
        <span class="close" data-dismiss="alert">&times;</span>
        @ViewBag.message
    </div>


}


<div class="row center-block box box-primary" style="box-shadow:2px 2px 7px 3px gray;">

    <div class="col-md-10 col-md-offset-2" style="margin-bottom:15px; margin-top:15px;">

        <form asp-area="Admin" asp-controller="Payment" asp-action="Create" method="post">


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="payment.Description" class="control-label"></label>
                <input asp-for="payment.Description" class="form-control" placeholder="Enter Description " />
                <span asp-validation-for="payment.Description" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="payment.OrderCode" class="control-label"></label>
                <input asp-for="payment.OrderCode" class="form-control" placeholder="Enter Order Code " />
                <span asp-validation-for="payment.OrderCode" class="text-danger"></span>
            </div>



            <div class="form-group">

                <label asp-for="payment.CustomerId" class="control-label"></label>

                <select asp-for="payment.CustomerId" asp-items="@(new SelectList(Model.customers,"Id","FullName"))" class="form-control circleInput">

                    <optgroup label="Select Customer">
                    </optgroup>

                </select>

                <span asp-validation-for="payment.CustomerId" class="text-danger"></span>

            </div>


            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Back</a>
            </div>



        </form>


    </div>
</div>


