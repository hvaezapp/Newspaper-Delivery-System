@model Transaction

@using NDS.Utility


@if (ViewBag.message != null)
{
    <div class="alert alert-@ViewBag.type">
        <span class="close" data-dismiss="alert">&times;</span>
        @ViewBag.message
    </div>


}


<div class="row center-block box box-primary" style="box-shadow:2px 2px 7px 3px gray;">


    <div class="col-md-10 col-md-offset-2" style="margin-bottom:15px; margin-top:15px;">

        <form asp-controller="Trans" asp-action="Edit" method="post">


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="CreateDate" />
            <input type="hidden" asp-for="IsDeleted" />
            <input type="hidden" asp-for="Id" />


            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" placeholder="Enter Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" placeholder="Enter Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>




            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>

                <select asp-for="Type" class="form-control circleInput">

                    <optgroup label="Select Type"></optgroup>

                    <option value="@TransactionType.Payment.ToInt()">Payment</option>
                    <option value="@TransactionType.Received.ToInt()">Received</option>


                </select>

                <span asp-validation-for="Type" class="text-danger"></span>

            </div>





            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Back</a>
            </div>


        </form>


    </div>

</div>

