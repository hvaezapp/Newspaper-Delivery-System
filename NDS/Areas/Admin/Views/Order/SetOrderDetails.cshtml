@model NDS.Models.ViewModels.OrderDetailViewModel

@using NDS.Utility


@if (ViewBag.message != null)
{
    <div class="alert alert-@ViewBag.type">
        <span class="close" data-dismiss="alert">&times;</span>
        @ViewBag.message
    </div>


}


<div class="row center-block box box-primary" style="box-shadow:2px 2px 7px 3px gray;">

    <div class="col-md-10 col-md-offset-2" style="margin-bottom:15px; margin-top:15px;">

        <form asp-area="Admin" asp-controller="Order" asp-action="SetOrderDetails" method="post">


            <input type="hidden" asp-for="orderDetails.FkOrderId" value="@ViewBag.orderId" />


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">

                <label asp-for="orderDetails.FkProductId" class="control-label"></label>

                <select asp-for="orderDetails.FkProductId" asp-items="@(new SelectList(Model.products,"Id","Title"))" class="form-control circleInput">

                    <optgroup label="Select Product">
                    </optgroup>

                </select>

                <span asp-validation-for="orderDetails.FkProductId" class="text-danger"></span>
            </div>




            <div class="form-group">
                <label asp-for="orderDetails.Quantity" class="control-label"></label>
                <input min="0" asp-for="orderDetails.Quantity" class="form-control" placeholder="Enter Quantity " />
                <span asp-validation-for="orderDetails.Quantity" class="text-danger"></span>
            </div>




            <div class="form-group">
                @if (Model.products.Any())
                {
                    <input type="submit" value="Add" class="btn btn-success" />
                }
                <a asp-action="Index" class="btn btn-danger">Back</a>
            </div>



        </form>


    </div>
</div>


