@model NDS.Models.ViewModels.LoginViewModel



@{
    ViewData["Title"] = "Login";

    Layout = null;
}


<html>

<head>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/css/StyleSheet-index.css" rel="stylesheet" />


    <style>


        #frmLogin {
            margin-top: 20px;
            box-shadow: 3px 3px 3px gray;
            width: 500px;
            margin: auto;
            margin-top: 16px;
        }
    </style>

</head>

<body>


    @if (User.Identity.IsAuthenticated)
    {
        <div class="text-center">

            <div id="login" style="box-shadow:3px 3px 3px gray;margin-top:20px">
                <a href="/Admin/Home/Index" class="btn btn-primary">Panel</a>

                <a href="SignOut" class="btn btn-danger">SignOut</a>
            </div>
        </div>
    }
    else
    {
        <form asp-controller="Account" asp-action="Login" style="margin-top:20px;box-shadow:3px 3px 3px gray;border-radius:20px;" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]" id="frmLogin">

            <div id="login">
                <span class="header-lastnews">Panel Login Form</span>

                <div class="hr"></div>
                <div class="form-group">

                    <div class="col-sm-8">
                        <input asp-for="UserName" class="form-control" id="txtusername" placeholder="UserName">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <label asp-for="UserName" class="col-sm-4 control-label"></label>
                </div>


                <div class="form-group">

                    <div class="col-sm-8">
                        <input asp-for="Password" class="form-control" id="txtusername" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <label asp-for="Password" class="col-sm-4 control-label"></label>
                </div>


                <div class="form-group">

                    <div class="col-sm-8">
                        <input type="checkbox" asp-for="RememberMe" class="checkbox-inline">
                    </div>
                    <label asp-for="RememberMe" class="col-sm-4 control-label"></label>
                </div>



                <div class="row" style="width: 100%;margin-top:32px;margin-left:24px">

                    <div class="form-group pull-right ">
                        <button type="submit" class="btn btn-success">Login</button>
                    </div>

                </div>


            </div>
        </form>
        <br />
        <div style="text-align:center">
            <b> Login Info </b>
            <hr />
            <p>
                Username : <strong>hwpro</strong>
               
            </p>
            <p>
                Password : <strong> @@Hwpro123</strong>
            </p>
        </div>
    }

</body>
</html>




